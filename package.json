{
  "name": "ultimate-dynamic-portfolio",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "npm run typecheck && NEXT_SKIP_TYPE_CHECK=1 NEXT_DISABLE_SWC_BINARY=1 next build",
    "build:static": "node scripts/exclude-api-routes.js clean && npm run typecheck && node scripts/exclude-api-routes.js move && NEXT_EXPORT=true NEXT_SKIP_TYPE_CHECK=1 NEXT_DISABLE_SWC_BINARY=1 next build && node scripts/exclude-api-routes.js restore",
    "build:optimized": "node scripts/build-optimized.js",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:unit": "node scripts/run-unit-tests.mjs",
    "test:unit:coverage": "COVERAGE=true node scripts/run-unit-tests.mjs",
    "test:e2e": "playwright test",
    "bench:metrics": "tsx scripts/bench-metrics.ts",
    "check:bundle": "tsx scripts/check-bundle.ts",
    "verify:adr": "node scripts/verify-adr.js",
    "ci:quality": "npm run lint && npm run build && npm run test:unit && npm run test:e2e && npm run bench:metrics && npm run check:bundle && npm run verify:adr",
    "ci:quality:static": "npm run lint && npm run build:static && npm run test:unit && npm run bench:metrics && npm run check:bundle && npm run verify:adr",
    "export": "npm run build:static",
    "deploy": "npm run build && npx vercel deploy --prebuilt",
    "prepare": "node scripts/setup-husky.js"
  },
  "dependencies": {
    "@mux/mux-node": "^12.8.0",
    "@neondatabase/serverless": "^0.9.0",
    "@sanity/client": "^6.18.1",
    "@sanity/vision": "^4.9.0",
    "@upstash/ratelimit": "^1.1.4",
    "@upstash/redis": "^1.34.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "framer-motion": "^12.23.22",
    "groq": "^3.47.0",
    "gsap": "^3.13.0",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "next-sanity": "^11.1.1",
    "open": "^10.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "resend": "^4.0.0",
    "sanity": "^4.9.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.0",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "10.4.19",
    "c8": "^10.1.3",
    "eslint": "8.57.0",
    "eslint-config-next": "^15.5.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "8.4.41",
    "supertest": "^7.1.4",
    "tailwindcss": "3.4.10",
    "tsx": "^4.19.2",
    "typescript": "5.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "eslint --cache --fix"
    ]
  },
  "description": "Ultra-light, future-proof static site. **No GSAP, no WebGL, no frameworks, no build.** Modern CSS; <2 KB JS.",
  "main": "next.config.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Senpai-Sama7/DouglasMitchell.info.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Senpai-Sama7/DouglasMitchell.info/issues"
  },
  "homepage": "https://github.com/Senpai-Sama7/DouglasMitchell.info#readme"
}
