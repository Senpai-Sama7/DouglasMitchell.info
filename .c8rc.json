{
  "reporter": ["text", "html", "json"],
  "reportsDir": "coverage",
  "exclude": [
    ".tmp/**",
    "tests/**",
    "scripts/**",
    "*.config.*",
    "coverage/**",
    "node_modules/**",
    ".next/**",
    "sanity/**",
    "sanity.config.ts",
    "next-env.d.ts",
    "tailwind.config.ts",
    "postcss.config.js",
    "playwright.config.js",
    "playwright.config.api.js"
  ],
  "include": [
    "lib/**",
    "app/**"
  ],
  "all": true,
  "skipFull": false,
  "allowExternal": true
}