# Production Environment Variables Template
# Copy to .env.production.local and fill in values

# ===================================
# REQUIRED
# ===================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://douglasmitchell.info
NEXT_PUBLIC_SITE_NAME="Douglas Mitchell"

# ===================================
# OPTIONAL - GITHUB API
# ===================================

# GitHub Personal Access Token
# Increases rate limit from 60 to 5000 requests/hour
# Create at: https://github.com/settings/tokens
# Scopes needed: public_repo (read-only)
GITHUB_TOKEN=

# ===================================
# OPTIONAL - ANALYTICS
# ===================================

# Vercel Analytics (automatic if deployed on Vercel)
VERCEL_ANALYTICS_ID=

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=douglasmitchell.info

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ===================================
# OPTIONAL - DATABASE
# ===================================

# Neon Postgres (for web vitals storage)
DATABASE_URL=

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===================================
# OPTIONAL - CMS
# ===================================

# Sanity CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# ===================================
# OPTIONAL - ERROR TRACKING
# ===================================

# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ===================================
# OPTIONAL - EMAIL
# ===================================

# Resend (for contact form)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@douglasmitchell.info

# ===================================
# OPTIONAL - SCHEDULING
# ===================================

# Calendly (for consultation booking)
NEXT_PUBLIC_CALENDLY_URL=

# ===================================
# DEVELOPMENT ONLY
# ===================================

# Show Web Vitals overlay (true/false)
NEXT_PUBLIC_SHOW_VITALS=false

# Enable bundle analyzer (true/false)
ANALYZE=false

# ===================================
# BUILD CONFIGURATION
# ===================================

# Base path (only if deploying to subdirectory)
NEXT_PUBLIC_BASE_PATH=

# Enable static export (true/false)
NEXT_EXPORT=false
